public class Referee implements Runnable{
	
	private Queue queue;
	private Player[] players;
	
	public Referee(Queue queue){
		
		this.queue = queue;
		players = new Player[2];
		
	}

	@Override
	public void run() {
	
			try {
				Thread.sleep(5000);
				System.out.println("Referee starting now ... it contains + " + queue.getBlockingQueue().peek());
				players[0] = queue.takeMVar();
				players[1] = queue.takeMVar();
				System.out.println("Referee contains Player " + players[0].getPlayerId() + " and " + + "Player " + players[0].getPlayerId());
			} catch (InterruptedException e) {
				e.printStackTrace();
			}
	}
				
}
