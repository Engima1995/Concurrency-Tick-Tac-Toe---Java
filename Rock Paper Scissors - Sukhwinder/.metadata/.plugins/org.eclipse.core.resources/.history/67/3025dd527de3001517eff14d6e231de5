public class Referee implements Runnable{
	
	private Queue queue;
	private Player[] players;
	
	public Referee(Queue queue){
		
		this.queue = queue;
		players = new Player[2];
		
	}

	@Override
	public void run() {
	
		try {
			while(true){
				System.out.println("Referee Contains " + queue.getBlockingQueue().size());
				Thread.sleep(1000);
			}
		} catch (InterruptedException e) {
			e.printStackTrace();
		}
		
	}
				
}
